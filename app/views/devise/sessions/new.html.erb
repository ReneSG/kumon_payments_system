<div class="container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <form class="col s12">
        <div class="row">  
          <div class="input-field col m4 s12">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col m4 s12">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        </div>
        <div class="row">
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox col m4 s12">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
        </div>
        <div class="row">
          <div class="btn waves-effect waves-light light-blue lighten-3 black-text actions">
            <%= f.submit "Log in" %>
          </div>
        </div>
      </form>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>