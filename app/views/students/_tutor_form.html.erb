<%= form.fields_for :tutor_attributes, tutor do |builder| %>
  <div class="row">
    <div class="input-field col s8">
      <%= builder.label "Nombre" %>
      <%= builder.text_field :name %>
    </div>
    <div class="input-field col s4">
      <%= builder.label "Parentesco" %>
      <%= builder.text_field :relationship %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <%= builder.label "Correo" %>
      <%= builder.text_field :email %>
    </div>
    <div class="input-field col s6" type="tel">
      <%= builder.label "Teléfono" %>
      <%= builder.text_field :phone %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s6">
      <%= builder.label "Calle" %>
      <%= builder.text_field :address_street %>
    </div>
    <div class="input-field col s2">
      <%= builder.label "Número" %>
      <%= builder.text_field :address_number %>
    </div>
    <div class="input-field col s4">
      <%= builder.label "Colonia" %>
      <%= builder.text_field :address_suburb %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s2">
      <%= builder.label "Código Postal" %>
      <%= builder.text_field :address_zipcode %>
    </div>
    <div class="input-field col s5">
      <%= builder.label "Ciudad" %>
      <%= builder.text_field :address_town %>
    </div>
    <div class="input-field col s5">
      <%= builder.label "Estado" %>
      <%= builder.text_field :address_state %>
    </div>
  </div>
<% end %>
