<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Estudiantes</h1>

  <table class="striped ">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Edad</th>
        <th>Género</th>
        <th>Escuela</th>
        <th>Grado</th>
        <th>Nivel</th>
        <th>Fecha de nacimiento</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= compute_age student.birthday %></td>
          <td><%= student.gender %></td>
          <td><%= student.school %></td>
          <td><%= student.school_grade %></td>
          <td><%= student.school_level %></td>
          <td><%= student.birthday %></td>
          <td><%= link_to 'Pagos', student_payments_path(student.id) %></td>
          <td><%= link_to 'Ver', student %></td>
          <td><%= link_to 'Editar', edit_student_path(student) %></td>
          <td><%= link_to 'Borrar', student, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'Nuevo Estudiante', new_student_path, class: "btn waves-effect waves-light light-blue lighten-3" %>
</div>
